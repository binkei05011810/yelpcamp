<% layout('./layouts/boilerplate') %>

<div class="container mb-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1504632348771-974e356b80af?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80"
                    alt="" class="card-image-top">
                <div class="mx-4 mt-4 mb-2">
                    <div class="card-body">
                        <h5 class="card-title">Login</h5>
                        <form action="/login" method="POST" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" name="username" id="username" class="form-control"
                                    placeholder="Username" required autofocus>
                                <div class="valid-feedback">Looks good!</div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" name="password" id="password" class="form-control"
                                    placeholder="Password" required>
                            </div>
                            <button class="btn btn-primary btn-block mb-3">Login</button>
                        </form>

                        <p class="mt-3">Don't have an account? <a href="/register">Sign up</a></p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>