<% layout('layouts/boilerplate') %>
<div class="row mt-5">
    <div class="col-4 offset-4">
        <h1 class="text-center">New Campground</h1>
        <form action="/campgrounds" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Enter the title of your campground</label>
                <input class="form-control" type="text" placeholder="Enter title" name="campground[title]"
                    id="title" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Enter the location of your campground</label>
                <input class="form-control" type="text" placeholder="Enter location" name="campground[location]"
                    id="location" required>
                <div class="valid-feedback">Looks Good!!!</div>
            </div>
            <div>
                <label class="form-label" for="price">Enter the price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" name="campground[price]" id="price"
                        aria-label="Amount (to the nearest dollar)" required>
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">What do you think about this campsite?</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description"
                    required></textarea>
                <div class="valid-feedback">Looks Good!!!</div>
            </div>
            <div class="mb-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="image" name="image" multiple>
                    <label class="custom-file-label" for="image">Choose images(s)...</label>
                </div>                  
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">Cancel</a>
    </div>
</div>

    