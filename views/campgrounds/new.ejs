<% layout('layouts/boilerplate') %>
<div class="container">
    <div class="row">
        <div class="col col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <div class="card border-secondary border-3 my-5">
                <div class="card-header text-center"><b>Create your new campground</b></div>
                <div class="card-body">
                    <form action="/campgrounds" method="post" novalidate class="needs-validation"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Enter the title of your campground</label>
                            <input class="form-control" type="text" placeholder="Enter title"
                                name="campground[title]" id="title" required>
                            <div class="valid-feedback">Looks Good</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Enter the location of your campground</label>
                            <input class="form-control" type="text" placeholder="Enter location"
                                name="campground[location]" id="location" required>
                            <div class="valid-feedback">Looks Good!!!</div>
                        </div>
                        <div>
                            <label class="form-label" for="price">Enter the price</label>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="text" class="form-control" name="campground[price]" id="price"
                                    aria-label="Amount (to the nearest dollar)" required>
                                <span class="input-group-text">.00</span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">What do you think about this
                                campsite?</label>
                            <textarea class="form-control" type="text" name="campground[description]"
                                id="description" required></textarea>
                            <div class="valid-feedback">Looks Good!!!</div>
                        </div>
                        <div class="mb-3">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="image" name="image" multiple>
                                <label class="custom-file-label" for="image">Choose images(s)...</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success text-dark">Add Campground</button>
                            <a href="/campgrounds" class="btn btn-warning">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>