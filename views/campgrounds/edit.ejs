<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= editCamp._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Enter the title of your campground</label>
                <input class="form-control" type="text" placeholder="Enter title" name="campground[title]" id="title" value="<%= editCamp.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Enter the location of your campground</label>
                <input class="form-control" type="text" placeholder="Enter location" name="campground[location]" id="location" value="<%= editCamp.location %>" required>
            </div>
            <div>
                <label class="form-label" for="price">Enter the price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" name = "campground[price]" id="price"  value="<%= editCamp.price %>" aria-label="Amount (to the nearest dollar)" required>
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">What do you think about this campsite?</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" required><%= editCamp.description %></textarea>
            </div>
            <div class="mb-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="image" name="image" multiple>
                    <label class="custom-file-label" for="image">Add more images(s)...</label>
                </div>                  
            </div>
            <div class="mb-3">
                <% editCamp.images.forEach( (image, i) => { %>
                <div class="form-check-inline">
                    <input class="form-check-input" type="checkbox" name="deleteImages[]" value="<%= image.filename %>" id="image-<%= i %>">
                    <label class="form-check-label" for="image-<%= i %>">
                        <img src="<%= image.thumbnail %>" class="img-thumbnail">
                    </label>
                </div>  
                <% }) %> 
            </div>
            <div class="mb-3">               
                <button class="btn btn-info">Save</button>
            </div>
        </form>
        <a href="/campgrounds/<%= editCamp._id %>">Cancel</a>
    </div>
</div>
